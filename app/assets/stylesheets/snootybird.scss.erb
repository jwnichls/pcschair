div.mainrow {
	min-height: 10em;
}

#timer {
	font-family: "Helvetica", Sans-serif;
	font-size: 6em;
	font-weight: bold;
	text-align: center;
}

p.no-active-paper {
	font-family: "Helvetica", Sans-serif;
	font-size: 1.5em;
	font-weight: bold;
	text-align: center;
}

p.paper-id {
	font-family: "Helvetica", Sans-serif;
	font-size: 1.5em;
	font-weight: bold;
	text-align: center;
	color: rgb(150,150,150);
}

p.paper-title {
	font-family: "Helvetica", Sans-serif;
	font-size: 2em;
	font-weight: bold;
	text-align: center;
	line-height: 1.25em;
}

ul.paper-authors {
	padding-top: 25px !important;
}

li.author {
	font-family: "Helvetica", Sans-serif;
	font-size: 1.25em;
	font-weight: normal;
}

li.venue {
	font-family: "Helvetica", Sans-serif;
	font-size: 2em;
	font-weight: normal;
}

li.paper {
	list-style-type: none;
	font-family: "Helvetica", Sans-serif;
	font-size: 1em;
	font-weight: normal;
}

div.rowspace100 {
	padding-top: 100px !important;
}

div.rowspace75 {
	padding-top: 75px !important;
}

div.rowspace50 {
	padding-top: 50px !important;
}

div.rowspace25 {
	padding-top: 25px !important;
}

.footer {
	margin-top: 75px;
	padding-top: 10px;
	padding-bottom: 20px;
	background-color: rgb(215,227,215);
	color: rgb(140,140,140);
}

.spaced {
	margin-top: 30px !important;
}

.smallspaced {
	margin-top: 10px !important;
}

.expired {
	color: rgb(200,0,0);
}

div.invisible {
	display: none;
}
