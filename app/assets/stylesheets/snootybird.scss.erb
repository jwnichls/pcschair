@media (prefers-color-scheme: dark) {
	body {
		background-color: #222;
		color: #ccc;
	}
	input {
		background-color: #222;
		color: #ccc;
	}
	button {
		background-color: #222;
		color: #ccc;
	}
	a {
		color: #8ecbff;
	}
	.expired {
		color: rgb(255,100,100) !important;
	}
	.clearimg {
		background: url(<%= asset_path('clear_dark.jpg') %>) !important;
		background-size: 12px !important;
	}
	.downimg {
		background: url(<%= asset_path('down_dark.jpg') %>) !important;
		background-size: 12px !important;
	}
	.upimg {
		background: url(<%= asset_path('up_dark.jpg') %>) !important;
		background-size: 12px !important;
	}
	.removeimg {
		background: url(<%= asset_path('remove_dark.jpg') %>) !important;
		background-size: 12px !important;
	}
}

